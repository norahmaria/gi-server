{
  "compilerOptions": {
    "lib": ["ES2021"],
    "module": "commonjs",
    "target": "ES2021",
    "rootDir": "src",
    "outDir": "build",
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution":"node",
    "esModuleInterop": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
  }
}
